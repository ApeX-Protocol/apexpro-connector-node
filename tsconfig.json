{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "types": [
      "node",
      "mocha"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "typings/*"
      ]
    },
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "src/packages/node-dist/zklink-sdk-node_bg.wasm",
    "src/packages/node-dist/zklink-sdk-node_bg.wasm.d.ts",
    "src/packages/web-dist/zklink-sdk-web_bg.wasm",
    "src/packages/web-dist/zklink-sdk-web_bg.wasm.d.ts"
  ],
  "exclude": [
    "mock",
    "node_modules",
    "**/*.spec.ts"
  ]
}
